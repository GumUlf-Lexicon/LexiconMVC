@* Language *@


@{
	ViewData["Title"] = "Languages";
}

@section Scripts{
	<script src="~/js/LanguageScript.js" asp-append-version="true"></script>
}


<div class="container">


	<h1 class="text-center">Language Index</h1>

	<div>

		<div id="LanguageList"></div>

		<div class="card card-body bg-dark mb-2">
			<input type="button" class="btn btn-info" onclick="getAllLanguages()" value="Get languages" />
			<a asp-controller="Language" asp-action="AddLanguage" class="btn btn-success my-1">Add new Language</a>
		</div>

		<div class="card card-body bg-dark mt-1">
			<div id="userMessages" class="fw-bold card-text"></div>
		</div>

	</div>
</div>