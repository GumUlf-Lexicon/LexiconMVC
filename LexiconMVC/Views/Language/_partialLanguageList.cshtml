@model List<LanguageModel>
@*  Create the header for the list of languages  *@

<div class="row pt-2 border-bottom ">
	<div class="col-1 fw-bold">ID</div>
	<div class="col-10 fw-bold">@Html.DisplayNameFor(m => Model.FirstOrDefault().Name)</div>
	<div class="col-1">&nbsp;</div>
</div>

@* Write out rows of language info*@

@{
	foreach(LanguageModel language in Model)
	{
		<partial name="_partialLanguage" model=language />
	}
}
