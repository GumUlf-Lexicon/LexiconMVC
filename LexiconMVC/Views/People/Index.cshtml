@{
	ViewData["Title"] = "People";
}

@model PeopleViewModel

<h1 class="text-center">People Index</h1>

<div class="row">
	<div class="col-lg-8">
		<div class="card card-body bg-light">
			<h3 class="text-center card-header mb-2">List of persons</h3>
			<partial name="_partialPersonTable" model=Model />
		</div>
	</div>
	<div class="col-lg-4">
		<div class="card card-body bg-light mb-2">
			<h5 class="card-header mb-2">Filter list</h5>
			<form asp-controller="People" asp-action="FilterPersons" method="post">
				<div class="for">
					<label asp-for="SearchPhrase" class="fw-bold"></label>
					<input type="text" asp-for="SearchPhrase" />
					<input type="submit" value="Filter" class="btn btn-success float-end" />
				</div>
			</form>
		</div>

		<div class="card card-body bg-light">
			<h5 class="card-header mb-2">Add person</h5>
			<partial name="_partialCreatePersonForm" model=Model.Cpvm />
		</div>
	</div>
</div>