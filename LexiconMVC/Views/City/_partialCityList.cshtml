@model List<CityModel>
@*  Create the header for the list of cities  *@

<div class="row pt-2 border-bottom ">
	<div class="col-4 fw-bold">@Html.DisplayNameFor(m => Model.FirstOrDefault().Name)</div>
	<div class="col-3 fw-bold">@Html.DisplayNameFor(m => Model.FirstOrDefault().Population)</div>
	<div class="col-3 fw-bold">@Html.DisplayNameFor(m => Model.FirstOrDefault().Country)</div>
	<div class="col-2">&nbsp;</div>
</div>

@* Write out rows of city info*@

@{
	foreach(CityModel city in Model)
	{
		<partial name="_partialCity" model=city />
	}
}
