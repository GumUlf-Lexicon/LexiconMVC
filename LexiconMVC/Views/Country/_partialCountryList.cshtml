@model List<CountryModel>
@*  Create the header for the list of countries  *@

<div class="row pt-2 border-bottom ">
	<div class="col-2 fw-bold">ID</div>
	<div class="col-4 fw-bold">@Html.DisplayNameFor(m => Model.FirstOrDefault().Name)</div>
	<div class="col-4 fw-bold">@Html.DisplayNameFor(m => Model.FirstOrDefault().Population)</div>
	<div class="col-2">&nbsp;</div>
</div>

@* Write out rows of country info*@

@{
	foreach(CountryModel country in Model)
	{
		<partial name="_partialCountry" model=country />
	}
}
