@model List<PersonModel>

@*  Create the header for the list of people  *@

<div class="row pt-2 border-bottom ">
	<div class="col-3 fw-bold">@Html.DisplayNameFor(m => Model.FirstOrDefault().Name)</div>
	<div class="col-2 fw-bold">@Html.DisplayNameFor(m => Model.FirstOrDefault().PhoneNumber)</div>
	<div class="col-2 fw-bold">@Html.DisplayNameFor(m => Model.FirstOrDefault().City)</div>
	<div class="col-3 fw-bold">@Html.DisplayNameFor(m => Model.FirstOrDefault().PersonLanguages.FirstOrDefault().Language) </div>
	<div class="col-2">&nbsp;</div>
</div>

@* Write out rows of person info*@

@{
	foreach(PersonModel person in Model)
	{
			<partial name="_partialPerson" model=person />
	}
}
 